@model Repositorio

@{
    if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
    {
        <div class="alert alert-error" role="alert">
            @ViewData["ErrorMessage"]
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="style=" color: rgb(200, 57, 45);"">@Html.DisplayFor(model => model.Nome)</h3>
                    <form asp-action="FavoritarRepositorio" asp-route-id="@Model.Id">
                        <button type="submit" class="btn btn-outline-warning">
                            <i class="fas fa-star mr-1"></i> Favoritar
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-md-8">
                        <div class="subtitle d-flex">
                            <i class="fas fa-user"></i>
                            <h5 class="ml-2">Desenvolvido por</h5>
                        </div>
                        <p>@Html.DisplayFor(model => model.Dono.Nome)</p>

                        <div class="subtitle d-flex">
                            <i class="fas fa-code"></i>
                            <h5 class="ml-2"> Linguagem</h5>
                        </div>
                        <p>@Html.DisplayFor(model => model.Linguagem.Nome)</p>

                        <div class="subtitle d-flex">
                            <i class="fas fa-calendar-alt"></i>
                            <h5 class="ml-2"> Última Atualização</h5>
                        </div>
                        <p>@Html.DisplayFor(model => model.DataUltimaAtualizacao)</p>

                        <div class="subtitle d-flex">
                            <i class="fas fa-align-left"></i>
                            <h5 class="ml-2">Descrição</h5>
                        </div>
                        <p>@Html.DisplayFor(model => model.Descricao)</p>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white">
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-outline-info">
                        <i class="fas fa-edit mr-1"></i> Editar
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" onsubmit="return confirm('Tem certeza que deseja excluir este repositório?');">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="fas fa-trash-alt mr-1"></i> Excluir
                        </button>
                    </form>
                </div>
            </div>
        </div>

    }
}